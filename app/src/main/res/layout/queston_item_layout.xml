<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/universal_app_margin"
        android:layout_marginBottom="@dimen/universal_app_margin"
        android:background="@drawable/item_background_layout"
        android:padding="@dimen/universal_app_margin"
        >
    <TextView
        android:id="@+id/question_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_font_size"/>
    </LinearLayout>

</LinearLayout>